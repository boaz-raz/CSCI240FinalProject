
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextArea?>
<DialogPane fx:controller="sample.AddInvController"
            xmlns:fx="http://javafx.com/fxml">
    <headerText>
        Enter new invoice for a customer
    </headerText>
    <content>
        <GridPane vgap="10" hgap="10">
            <Label text="Customer Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="customerNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label text="Customer Address:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="customerAddressField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <Label text="Phone:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="customerPhoneField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            <Label text="Job Description:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextArea fx:id="jobDescriptionArea" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            <Label text="Balance amount:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="customerBalanceField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            <Label text="Due Date:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <DatePicker fx:id="dueDatePicker" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
        </GridPane>
    </content>
</DialogPane>